    <div class="flex justify-center py-10 w-[80%]">
        <div
            class="flex gap-5 justify-between items-center w-full [&>*]:text-2xl max-sm:flex-col"
        >
            <a class="no-underline" href="/">James Barnfather</a>
            <div class="w-fit flex divide-x-2 divide-text] [&>*]:px-5">
                <a class="no-underline" href="/">Home</a>
                <a class="no-underline" href="/projects">Personal Projects</a>
                <a class="no-underline" href="/work">My Work</a>
